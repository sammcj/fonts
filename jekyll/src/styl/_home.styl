.post-item
    center(rem(680px))
    text-align left
    padding rem(60px) rem(40px)
    position relative
    background-image linear-gradient( -45deg, main, lighten(main, 50%) )
    background-repeat: no-repeat;
    background-size: 200% 2px;
    background-position: 100% 90%;
    // linear-gradient(to right, #fffbcc 50%, #a1e5cf 50%);
    
    &:hover
        animation: animateGradient 300ms forwards;
        &:after
            // width 100%
    +above(cut)
        padding-left 20px
    time
        +above(cut)
            col(1.8/6)
            padding 0  1.25rem;
        text-align left
        text-decoration none
        border none
        padding-left rem(10px)   
        .day
            mainFont(800)
            font-size rem(18px)
            line-height 1.6
        .month-year
            color black
            font-size rem(15px)
    .content
        +below(cut)
            text-align center
            stack()
        a
            +above(cut)
                col(4.2/6)
            text-decoration none
            border none
        .date
            color main
        .post-title
            color black
            position relative
            padding 0
            font-size rem(20px)
            margin 0
            text-align center
            &:before
                content ''
            +above(cut)
                text-align left
                margin-left rem(-10px)
                display initial
                font-size rem(21px)
                text-decoration none